import psycopg2

conn = psycopg2.connect(host='localhost', dbname='python',user='postgres',password='python',port=5432)

cur = conn.cursor() 

sql = """ 
    update sample
    set col02='6',
        col03='6'
    where 
        col01='4'
"""
cur.execute(sql) 
print("cnt",cur.rowcount)
conn.commit()

cur.close()
conn.close()
